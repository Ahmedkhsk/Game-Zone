@model List<Course>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<table class="table table-borderd table-hover">
    <tr>
        <td>ID</td>
        <td>Name</td>
        <td>degree</td>
        <td>minDegree</td>
        <td>Department</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.degree</td>
            <td>@item.minDegree</td>
            <td>@item.Department.Name</td>
        </tr>
    }
</table>
<br />
<a asp-action="Add" asp-controller="Course" class=" btn btn-success">Add New Course</a>

