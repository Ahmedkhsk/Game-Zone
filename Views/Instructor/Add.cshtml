@model InstrutorCourseDeptList

<form action="/Instructor/SaveAdd" method="post">
    
    <label for="Name">Name</label>
    <input type="text" name="Name" value="" class="form form-control" />
    <label for="Imag">Imag</label>
    <input type="text" name="Imag" value="" class="form form-control" />
    <label for="Salary">Salary</label>
    <input type="text" name="Salary" value="" class="form form-control" />
    <label for="Address">Address</label>
    <input type="text" name="Address" value="" class="form form-control" />
    <label for="DepartmentID">Department</label> 
    <select type="text" name="DepartmentID" value="" class="form form-control">
        @foreach (var item in Model.ListDepartment)
        {
            <option value="@item.Id">@item.Name</option>
        } 
    </select>
    <label for="CourseID">Course</label>
    <select type="text" name="CourseID" value="" class="form form-control">
        @foreach (var item in Model.ListCourses)
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
    <br>
    <input type="submit" value="Create" class="btn btn-primary"/>
    <br>
    <a href="/Instructor/Index" class=" btn btn-success">Back To Index</a>
</form>
